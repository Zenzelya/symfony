{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    <div class="container mx-auto">

        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1 class="text-2xl font-bold mb-4">Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        <div class="mb-4">
            {{ form_row(registrationForm.email, {'attr': {'class': 'block w-full border rounded p-2'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.plainPassword, {
                'label': 'Password',
                'attr': {'class': 'block w-full border rounded p-2'}
            }) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}